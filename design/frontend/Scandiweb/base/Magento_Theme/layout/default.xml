<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="custom-class"/>
        <referenceContainer name="page.wrapper">
            <block ifconfig="checkoutProvider:shippingMethod() == 'freeshipping'" class="Magento\Framework\View\Element\Template" name="customblock" before="-" template="Magento_Theme::custom.phtml" />
        </referenceContainer>
        <referenceBlock name="block.upsell" remove="true" />
    </body>
</page>



